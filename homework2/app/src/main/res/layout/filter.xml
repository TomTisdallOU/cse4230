<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211c32"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/allCollectionsToolbar"
        android:layout_width="wrap_content"

        android:layout_height="?attr/actionBarSize"

        android:background="#221c32">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Burger Menu"
                android:scaleType="fitStart"
                android:src="@drawable/burger_icon" />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="Search Icon"
                android:paddingRight="8dp"
                android:scaleType="fitEnd"
                android:src="@drawable/search_icon" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CATEGORY"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFE9BD65"
                android:gravity="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SORT BY"
                android:textColor="@android:color/darker_gray"
                android:textSize="8sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="234dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:gravity="center" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#e9bd65"
        android:gravity="center_horizontal|center"
        android:text="SALADS"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#211c32"
        android:gravity="center_horizontal|center"
        android:text="SOUPS"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#FFE9BD65"
        android:gravity="center"
        android:text="PASTA"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#FFE9BD65"
        android:gravity="center"
        android:text="MEATBALLS"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#211c32"
        android:gravity="center"
        android:text="STEAK AND CHOPS"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#211c32"
        android:gravity="center"
        android:text="VEGETABLES"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#211c32"
        android:gravity="center"
        android:text="CAKES"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#211c32"
        android:gravity="center"
        android:text="DESSERTS"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#211c32"
        android:gravity="center"
        android:text="DRINKS"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#211c32"
        android:gravity="center"
        android:text="COCKTAILS"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/facebookButton"
        android:layout_centerHorizontal="true"

        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@drawable/fb_button"
        android:fontFamily="@font/fjallaone_regular"
        android:text="SHOW SELECTED"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />

</LinearLayout>