<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow>
        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/allCollectionsToolbar"
            android:layout_width="wrap_content"

            android:layout_height="?attr/actionBarSize"

            android:background="#221c32">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Burger Menu"
                    android:scaleType="fitStart"
                    android:src="@drawable/burger_icon" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/fjallaone_regular"
                android:text="@string/myMenu"
                android:textColor="#FFFBFAFA"
                android:textSize="16pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Search Icon"
                    android:paddingRight="8dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/search_icon" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </TableRow>


    <TableRow android:layout_height="184dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_weight="0.5"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="3dp"
                    android:paddingTop="7dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/recipe1" />
                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_button"
                    android:src="@drawable/trash_icon"/>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="7dp"
                    android:paddingTop="7dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/recipe2" />
                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_button"
                    android:src="@drawable/trash_icon"/>


            </RelativeLayout>

        </LinearLayout>

    </TableRow >
    <TableRow android:layout_height="184dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/myImageViewText3"
                android:layout_width="match_parent"
                android:layout_height="129dp"

                android:text="CREATIVE FOOD"
                android:textColor="@android:color/black"
                android:textSize="8sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </TableRow>




</TableLayout>