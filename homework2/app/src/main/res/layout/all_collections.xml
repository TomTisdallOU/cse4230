<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow>

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/allCollectionsToolbar"
            android:layout_width="wrap_content"

            android:layout_height="?attr/actionBarSize"

            android:background="#221c32">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Burger Menu"
                    android:scaleType="fitStart"
                    android:src="@drawable/burger_icon" />

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Search Icon"
                    android:scaleType="fitEnd"
                    android:src="@drawable/search_icon" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </TableRow>

    <TableRow android:layout_height="54dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/plateswithstrawberries" />
    </TableRow>

    <TableRow android:layout_height="184dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_height="175dp"
                android:layout_weight="0.5"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:paddingTop="7dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/platewithstrawberrycake" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_height="175dp"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/picturewithstraws" />
        </LinearLayout>

    </TableRow>
    <TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/salad" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:paddingLeft="3dp"
                android:paddingRight="7dp"
                android:paddingTop="1dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pizza" />
        </LinearLayout>

    </TableRow>


</TableLayout>



