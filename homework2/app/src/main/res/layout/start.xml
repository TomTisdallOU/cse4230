<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211c32">


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/red_soup"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"

    android:maxHeight="225dp"
    android:maxWidth="225dp"
    android:scaleType="fitXY"
    android:adjustViewBounds="true"
    android:layout_marginTop="20dp"
    />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/elipse_for_start_page_image"

        android:background="#211c32"
        android:layout_above="@id/sign_up"
        android:layout_alignParentStart="true"

        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        android:layout_marginBottom="50dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sandwich"
        android:layout_above="@id/sign_up"
        android:layout_alignParentStart="true"



        android:maxHeight="225dp"
        android:maxWidth="225dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        android:layout_marginBottom="50dp"/>

    <ImageView
       android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"

        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLAVOURITE"
        android:fontFamily="@font/fjallaone_regular"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        />






    <Button
        android:id="@+id/sign_up"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/fb_button"
        android:textAlignment="center"
        android:text="@string/signup"
        android:textColor="#FFFFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/facebookButton"
        android:layout_margin="10dp"
        android:fontFamily="@font/fjallaone_regular"
        android:textSize="16dp"

        />

<!-- Todo scale the FB icon  using relative layout with image and button -->

    <Button
        android:id="@+id/facebookButton"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="50dp"

        android:layout_centerHorizontal="true"
        android:background="@drawable/signup_button"
        android:fontFamily="@font/fjallaone_regular"
        android:textSize="16dp"
        android:text="SIGN IN WITH FACEBOOK"
        android:textAlignment="textStart"
        android:drawablePadding="10dp"
        android:layout_above="@id/have_account"
        android:textColor="#FFFFFFFF"
        android:drawableStart="@drawable/facebook_icon"
        android:paddingLeft="90dp"
        >

    </Button>

    <TextView
        android:id="@+id/have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/linear_please_sign_in"
        android:textColor="#FFFFFFFF"
        android:fontFamily="@font/avenir_lt_std_35_light_5169"
        android:text="Already have account?"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:id="@+id/linear_please_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"

        >


    <TextView
        android:id="@+id/please"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFDFFFF"
        android:fontFamily="@font/avenir_lt_std_35_light_5169"
        android:text="Please "

        />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#FFFDFFFF"
        android:fontFamily="@font/avenir_lt_std_35_light_5169"
        android:text="Sign in"
        android:layout_alignRight="@id/please"

        />
    </LinearLayout>
</RelativeLayout>